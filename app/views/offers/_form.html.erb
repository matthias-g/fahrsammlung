<%= custom_bootstrap_form_for @offer do |f| %>
    <div class="edit container-fluid">

      <div class="row">
        <%= f.text_area :title,
                        input_group_wrapper_class: 'input-group-lg col-md-12',
                        wrapper_class: 'title',
                        class: 'short-description',
                        append: (@offer.title ? 140 - @offer.title.length : 140).to_s,
                        placeholder: tm('items.placeholder.title', Offer),
                        hide_label: true %>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-8">
          <%= f.text_area :description, wrapper_class: 'description', hide_label: true, placeholder: t('items.placeholder.description'), help: ('<span class="warning"><i class="fas fa-shield"></i> ' + tm('privacy.warning', Offer, count: 2) + '</span>').html_safe %>
        </div>

        <div class="col-md-4">
          <div class="info">

            <%= f.text_field :seat_count,
                             placeholder: t('activerecord.attributes.offer.seat_count'),
                             wrapper_class: 'size',
                             input_group_wrapper_class: 'input-group-sm',
                             hide_label: true %>
          </div>

          <div class="location">
            <%= f.text_field :start_location,
                             hide_label: true,
                             placeholder: t('activerecord.attributes.offer.start_location'),
                             class: 'input-sm' %>
            <%= f.text_field :start_time,
                             hide_label: true,
                             placeholder: t('activerecord.attributes.offer.start_time'),
                             class: 'input-sm' %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-1 explanation">
          <i class="fas fa-info icon"></i>
        </div>
        <div class="col-md-11">
          <%= tm 'privacy.explanation', @offer %>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-12">
          <div class="form-actions">
            <%= f.submit nil, class: 'btn btn-primary' %>
            <%= link_to t('helpers.links.cancel'), offers_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>

    </div>

<% end %>
