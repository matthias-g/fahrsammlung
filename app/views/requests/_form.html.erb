<%= custom_bootstrap_form_for @request do |f| %>
    <div class="edit">

      <div class="row">
        <%= f.text_area :title,
                         input_group_wrapper_class: 'input-group-lg col-md-12',
                         wrapper_class: 'title',
                         class: 'short-description',
                         append: (@request.title ? 140 - @request.title.length : 140).to_s,
                         placeholder: tm('items.placeholder.title', Request),
                         hide_label: true %>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-8">
          <%= f.text_area :description, wrapper_class: 'description', hide_label: true, placeholder: t('items.placeholder.description'), help: ('<span class="warning"><i class="fas fa-shield"></i> ' + tm('privacy.warning', Request, count: 2) + '</span>').html_safe %>
        </div>

        <div class="col-md-4">
          <div class="info">
            <%= f.text_field :start_location,
                             hide_label: true,
                             input_group_wrapper_class: 'input-group-sm',
                             prepend: t('activerecord.attributes.request.start_location'),
                             class: 'input-sm' %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-1 explanation">
          <i class="fas fa-info icon"></i>
        </div>
        <div class="col-md-11">
          <%= tm 'privacy.explanation', @request %>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-12">
          <div class="form-actions">
            <%= f.submit nil, class: 'btn btn-primary' %>
            <%= link_to t('helpers.links.cancel'), requests_path, class: 'btn btn-default' %>
          </div>
        </div>

      </div>
    </div>

<% end %>
